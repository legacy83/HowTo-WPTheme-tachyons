{
  "name": "howto-wptheme-tachyons",
  "version": "0.1.0",
  "description": "The HowTo WPTheme tachyons.",
  "scripts": {
    "build": "npm run build:styles",
    "build:styles": "npm run build:styles:theme && npm run build:styles:theme:min",
    "build:styles:theme": "tachyons resources/assets/styles/style.theme.css > runtime/style.theme.css",
    "build:styles:theme:min": "tachyons resources/assets/styles/style.theme.css --minify > runtime/style.theme.min.css",
    "build:watch": "watch \"npm run build\" ./resources/assets/styles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trsenna/HowTo-WPTheme-tachyons.git"
  },
  "author": "Thiago Senna",
  "license": "GPL-2.0",
  "devDependencies": {
    "tachyons": "^4.9.1",
    "tachyons-cli": "^1.3.0",
    "watch": "^1.0.2"
  }
}
